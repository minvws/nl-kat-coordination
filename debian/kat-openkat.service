[Unit]
Description=kat-openkat daemon
Requires=kat-openkat-worker.service
After=network.target

[Service]
User=kat
Group=kat
SyslogIdentifier=kat-openkat
WorkingDirectory=/opt/venvs/kat-openkat/
EnvironmentFile=/usr/lib/kat/openkat.defaults
EnvironmentFile=/etc/kat/openkat.conf
ExecStart=/opt/venvs/kat-openkat/bin/granian --interface wsgi openkat.wsgi:application
Restart=on-failure
RestartSec=3s
KillSignal=SIGQUIT
KillMode=mixed
NotifyAccess=all

[Install]
WantedBy=multi-user.target
